{
  "name": "discord-selfbot-modular",
  "version": "1.0.0",
  "description": "Modular Discord selfbot (educational).",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "prebuild": "pnpm format:check && pnpm lint && pnpm test",
    "build": "tsc",
    "prestart": "pnpm build",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest --runInBand",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "validate:env": "tsx scripts/validateEnv.ts",
    "prepare": "husky"
  },
  "author": "ngetikin",
  "license": "MIT",
  "packageManager": "pnpm@10.16.1",
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "discord.js-selfbot-v13": "^3.7.0",
    "dotenv": "^17.2.2",
    "ffmpeg-static": "^5.2.0",
    "pino": "^10.1.0",
    "sodium": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write --ignore-unknown"
    ],
    "*": "pnpm exec prettier --write --ignore-unknown"
  }
}
